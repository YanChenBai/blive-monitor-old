{
  files: ['./dist', './node_modules', './render/dist', './package.json', './blivemonitor.ico'],
  extraResources: ['./blivemonitor.ico'],
  productName: 'blive-monitor',
  directories: {
    output: 'build'
  },
  publish: [
    {
      provider: 'github',
      owner: 'YanChenBai',
      repo: 'blive-monitor',
      releaseType: 'release'
    }
  ],
  nsis: {
    oneClick: false,
    createDesktopShortcut: true,
    allowToChangeInstallationDirectory: true
  },
  win: {
    icon: './blivemonitor.ico',
    artifactName: '${productName}-${platform}-${arch}-${version}.${ext}',
    target: [
      {
        // 打包成一个独立的 exe 安装程序
        target: 'nsis',
        // 这个意思是打出来32 bit + 64 bit的包，但是要注意：这样打包出来的安装包体积比较大，所以建议直接打32的安装包。
        arch: ['x64']
      }
    ]
  }
}
